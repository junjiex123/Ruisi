<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_secondary</item>
        <item name="android:listDivider">@drawable/my_divider</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>


    <style name="AppTheme" parent="BaseTheme">
        <!--这一句加上status就和primary颜色一样额-->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--activity过场动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="text_toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_20_pri">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_18_pri">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_16_sec">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_16_pri">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_14_sec">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_14_pri">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_12_sec">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>


    <!-- Button -->
    <style name="btn_pri" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_primary_bg</item>
    </style>
</resources>
